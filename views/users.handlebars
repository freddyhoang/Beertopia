<div class="container">

  <div class="card text-center">
    {{!-- card header, contains all the forms to create Sets --}}
    <div class="card-header">
      <h1>Beertopia Users</h1>

      <hr class="my-4">
        Create a user profile for yourself so you can save your ratings!
      <hr class="my-4">
    
      
      {{!-- input forms --}}
      <div class="form-row text-left">
        <div class="form-group col-md-6">
          <label for="username">Username</label>
          <input type="text" class="form-control" name="username" id="username" placeholder="Ringbearer">
        </div>

        <div class="form-group col-md-6">
          <label for="email">Email</label>
          <input type="text" class="form-control" name="email" id="email" placeholder="bagend@theshire.com">
        </div>
      </div>

      <div class="form-row text-left">
        <div class="form-group col-md-6">
          <label for="fname">First Name</label>
          <input type="text" class="form-control" name="fname" id="fname" placeholder="Frodo">
        </div>

        <div class="form-group col-md-6">
          <label for="lname">Last Name</label>
          <input type="text" class="form-control" name="lname" id="lname" placeholder="Baggins">
        </div>
      </div>  

      <div class="form-row text-left">
        <div class="form-group col-md-3">
          <label for="dob">Birthday</label>
          <input type="date" class="form-control" name="dob" id="dob" placeholder="7/29/43">
        </div>

        <div class="form-group col-md-3">
          <label for="zip">Zipcode</label>
          <input type="number" class="form-control" name="zip" id="zip" placeholder="97214">
        </div>

        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" name="gender" id="gender_m" value="male">
          <label class="form-check-label" for="gender_m">Male</label>
        </div>

        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" name="gender" id="gender_f" value="female">
          <label class="form-check-label" for="gender_f">Female</label>
        </div>
      </div>

      <div class="form-row">
        <div class="col-md-5"></div>
        <div class="form-group col-md-1">
          <input type="submit" class="btn btn-info" name="add_user" id='add_user' value="Create Profile">
        </div>
        <div class="col-md-5"></div>
      </div>

    </div>

    <div class="card-body">
    
      {{!-- contains the tables top rows --}}
      <table class="table table-sm table-hover">
        
        <thead>
          <tr>
            <th scope="col">Username</th>
            <th scope="col">Name</th>
          </tr>
        </thead>

        <tbody id="table-body">
          <tr>
            <td scope="col">blueberry_soup</td>
            <td scope="col">Savanna</td>
          </tr>
          <tr>
            <td scope="col">mithrandir25</td>
            <td scope="col">Gandalf</td>
          </tr>
          <tr>
            <td scope="col">beer_and_coding</td>
            <td scope="col">Freddy</td>
          </tr>
        </tbody>
      </table>

    </div>

  </div>

</div>
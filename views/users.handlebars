<div class="container">

  <div class="card text-center">
    {{!-- card header, contains all the forms to create Sets --}}
    <div class="card-header">
      <h1>Beertopia Users</h1>

      <hr class="my-4">
        Create a user profile for yourself so you can save your ratings!
      <hr class="my-4">
    
      {{#if alert}}
      {{!-- alert message for when the minimum isn't entered --}}
      <div id="alert-time" class = "alert alert-danger alert-dismissible fade show" role="alert">
        {{alert}}
      </div>
      {{/if}}

      {{!-- input forms --}}
      <form id="adduser" action="/users" method="POST">
        <div class="form-row text-left">
          <div class="form-group col-md-6">
            <label for="username">Username</label>
            <input type="text" class="form-control" name="username" id="username" placeholder="Ringbearer" required>
          </div>

          <div class="form-group col-md-6">
            <label for="email">Email</label>
            <input type="text" class="form-control" name="email" id="email" placeholder="bagend@theshire.com" required>
          </div>
        </div>

        <div class="form-row text-left">
          <div class="form-group col-md-6">
            <label for="fname">First Name</label>
            <input type="text" class="form-control" name="fname" id="fname" placeholder="Frodo" required>
          </div>

          <div class="form-group col-md-6">
            <label for="lname">Last Name</label>
            <input type="text" class="form-control" name="lname" id="lname" placeholder="Baggins" required>
          </div>
        </div>  

        <div class="form-row text-left">
          <div class="form-group col-md-3">
            <label for="dob">Birthday</label>
            <input type="date" class="form-control" name="dob" id="dob" placeholder="7/29/43" required>
          </div>

          <div class="form-group col-md-3">
            <label for="zip">Zipcode</label>
            <input type="number" class="form-control" name="zip" id="zip" placeholder="97214" required>
          </div>

          <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="gender" id="gender_m" value="male" required>
            <label class="form-check-label" for="gender_m">Male</label>
          </div>

          <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="gender" id="gender_f" value="female" required>
            <label class="form-check-label" for="gender_f">Female</label>
          </div>

          <div class="form-group col-md-3">
            <input type="submit" class="btn btn-info" id='submit' value="Create Profile">
          </div>
        </div>
      </form>  
    
    </div>


    <div class="card-body">
    
      {{!-- contains the tables top rows --}}
      <table class="table table-sm table-hover">
        
        <thead>
          <tr>
            <th scope="col">Username</th>
            <th scope="col">Name</th>
            <th scope="col"></th>
          </tr>
        </thead>

        <tbody id="user-table">
          {{#each users}}
          <tr>
            <td scope="col">{{this.username}}</td>
            <td scope="col">{{this.first_name}}</td>
            <td scope="col"><button class="btn btn-danger" onclick="deleteUser({{this.user_id}})">Delete</button></td>
          </tr>
          {{/each}}
        </tbody>

      </table>

    </div>

  </div>

</div>

<script src="/deleteUser.js"></script>

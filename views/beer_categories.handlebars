

<div class="container">

  <div class="card text-center">
    {{!-- card header, contains all the forms to create Sets --}}
    <div class="card-header">
      <h3>Beers placed into categories</h3>
      <hr class='my-4'>
      {{!-- alert message for when the minimum isn't entered --}}
      <div id="alert-time" role="alert">
      </div>
      {{!-- input forms --}}
      <div class="form-row text-center">
        <div class="col-md-1"></div>
        <div class="form-group col-md-2">
          <input type="text" class="form-control" name="exercise" id="exercise" placeholder="Bench Press">
        </div>

        <div class="form-group col-md-1">
          <input type="number" class="form-control" name="reps" id="reps" placeholder="5 reps">
        </div>

        <div class="form-group col-md-1">
          <input type="number" class="form-control" name="weight" id="weight" placeholder="45 lbs">
        </div>

        <div class="form-group col-md-1">
          
          <select id="units" class="form-control">
              <option>Lbs</option>
              <option>Kg</option>
          </select>

        </div>

        <div class="form-group col-md-3">
          <input type="date" class="form-control" name="date" id="date" placeholder="06/03/1990">
        </div>
        
        <div class="form-group col-md-1">
          <input type="submit" name="Add" id='Add'>
        </div>

  	  </div>
    </div>

    <div class="card-body">
      {{!-- contains the tables top rows --}}
      <table class="table table-sm table-hover">
        
        <thead>
          <tr>
            <th scope="col">Set</th>
            <th scope="col">Exercise</th>
            <th scope="col">Reps</th>
            <th scope="col">Weight</th>
            <th scope="col">Units</th>
            <th scope="col">Date</th>
          </tr>
        </thead>

        <tbody id="table-body"></tbody>

      </table>

    </div>

    {{!-- a bunch of forms giving additional powers --}}
    <div class="card-footer text-muted">
      <input type="submit" class="btn btn-danger" id="ClearAll" name="Clear All" value="Clear All">
    </div>

  </div>

</div>